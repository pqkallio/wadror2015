<h2><%= @beer.name %></h2>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
<% if @beer.ratings.empty? %>
    No ratings for this beer yet!
<% else %>
    Has <%= pluralize(@beer.ratings.count, "rating") %>, average <%= @beer.average_rating %>
<% end %>
</p>

<% if current_user %>

    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class:"btn btn-primary" %>
    <% end %>

    <% if current_user %>
        <%= link_to 'Edit', edit_beer_path(@beer), class:"btn btn-primary" %><br/>
        <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
    <% end %>
<% end %>