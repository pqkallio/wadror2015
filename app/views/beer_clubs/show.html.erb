<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>Members:<br/>
<% if @beer_club.members.empty? %>
  No members in this club yet!
<% else %>
  <ul>
    <% @beer_club.members.each do |member| %>
      <li> <%= link_to member.username, user_path(member.id) %> </li>
    <% end %>
  </ul>
<% end %>

<% if current_user %>

    <% if !@beer_club.members.include? current_user %>
      <%= form_for(@membership) do |f| %>
          <%= f.hidden_field :beer_club_id %>
          <%= f.submit value:"join the club" %>
      <% end %>
    <% else %>
      <%= form_for(@membership, method: "delete") do |f| %>
          <%= f.hidden_field :beer_club_id %>
          <%= f.submit value: "end the membership" %>
      <% end %>
    <% end %>

    <%= link_to 'Edit', edit_beer_club_path(@beer_club) %><br/>
    <%= link_to 'Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</p>