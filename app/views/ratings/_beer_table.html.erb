<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Brewery</th>
    <th>Average</th>
  </tr>
  </thead>
  <tbody>
  <% top_beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer_path(beer) %></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer.brewery) %></td>
        <td><%= beer.average_rating.round(1) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
